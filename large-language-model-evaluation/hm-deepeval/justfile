update-lock-file:
    uv lock

install-dependencies:
    uv sync --dev

dev:
    uv run poe dev

test:
    uv run poe test

test-coverage:
    uv run poe test-coverage

deepeval-set-model:
    uv run deepeval set-litellm openai/claude-opus-4-5 --api-base=https://litellm.hongbomiao.com

deepeval-test:
    export OPENAI_API_KEY=xxx && \
    uv run deepeval test run src

deepeval-view:
    uv run deepeval view
