// https://docs.renovatebot.com/configuration-options

{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
  ],
  lockFileMaintenance: {
    enabled: true,
  },
  packageRules: [
    {
      matchUpdateTypes: [
        'major',
        'minor',
        'patch',
      ],
      additionalBranchPrefix: '{{parentDir}}-',
      semanticCommitScope: '{{#if parentDir}}{{parentDir}}{{else}}deps{{/if}}',
    },
  ],
  prHourlyLimit: 0,
}
