{
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageExtra": "({{packageFile}})"
  },
  "additionalBranchPrefix": "{{parentDir}}-",
  "semanticCommitScope": "{{#if parentDir}}{{parentDir}}{{else}}deps{{/if}}",
  "prHourlyLimit": 0,
  "packageRules": [
    {
      "matchPackageNames": [
        "stylelint",
        "stylelint-prettier"
      ],
      "groupName": "stylelint packages"
    },
    {
      "matchPackageNames": [
        "torch",
        "torchvision"
      ],
      "groupName": "torch packages"
    },
    {
      "matchPackageNames": [
        "docker.io/node"
      ],
      "allowedVersions": "/^(\\d*[02468])\\..+$/"
    }
  ]
}
