FROM docker.io/sbtscala/scala-sbt:eclipse-temurin-jammy-17.0.5_8_1.8.2_2.12.17 AS builder
WORKDIR /usr/src/app/
COPY hm-spark/applications/find-retired-people-scala/.jvmopts ./
COPY hm-spark/applications/find-retired-people-scala/build.sbt ./
COPY hm-spark/applications/ingest-from-s3-to-kafka/project/plugins.sbt ./project/
COPY hm-spark/applications/find-retired-people-scala/src/ ./src/
RUN sbt compile assembly

FROM docker.io/bitnami/spark:3.3.2-debian-11-r29
WORKDIR /opt/spark/work-dir
COPY --from=builder /usr/src/app/target/scala-2.12/FindRetiredPeople-assembly-1.0.jar /opt/spark/work-dir/
