{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hm-web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "sh scripts/prebuild.sh",
    "build": "tsc && vite build",
    "postbuild": "sh scripts/postbuild.sh",
    "serve": "vite preview --port=11413",
    "analyze": "vite-bundle-visualizer",
    "lint-javascript": "eslint .",
    "lint-javascript-fix": "eslint . --fix",
    "static-type-check-typescript": "tsc",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-ui": "vitest --ui",
    "test-coverage": "vitest run --coverage",
    "storybook": "storybook dev --port=6006",
    "storybook-build": "storybook build",
    "storybook-publish": "chromatic --build-script-name storybook-build",
    "lighthouse": "lhci autorun",
    "shadcn": "shadcn add button card separator"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@analytics/google-tag-manager": "0.6.0",
