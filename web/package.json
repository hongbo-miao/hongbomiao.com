{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hm-web",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "prebuild": "sh bin/prebuild.sh",
    "build": "tsc && vite build",
    "postbuild": "sh bin/postbuild.sh",
    "serve": "vite preview --port=11413",
    "analyze": "vite-bundle-visualizer",
    "lint-javascript": "eslint .",
    "lint-javascript-fix": "eslint . --fix",
    "static-type-check-typescript": "tsc",
    "test": "vitest run",
    "test-watch": "vitest",
    "test-ui": "vitest --ui",
    "test-coverage": "vitest run --coverage",
    "storybook": "storybook dev --port=6006",
    "storybook-build": "storybook build",
    "storybook-publish": "chromatic --build-script-name storybook-build",
    "lighthouse": "lhci autorun",
    "shadcn": "shadcn add button card separator"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@analytics/google-tag-manager": "0.6.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "0.203.0",
    "@opentelemetry/instrumentation": "0.203.0",
    "@opentelemetry/instrumentation-document-load": "0.48.0",
    "@opentelemetry/instrumentation-xml-http-request": "0.203.0",
    "@opentelemetry/resources": "2.0.1",
    "@opentelemetry/sdk-trace-base": "2.0.1",
    "@opentelemetry/sdk-trace-web": "2.0.1",
    "@opentelemetry/semantic-conventions": "1.36.0",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slot": "1.2.3",
    "@sentry/react": "10.5.0",
    "@tailwindcss/vite": "4.1.11",
    "@tanstack/react-query": "5.85.3",
    "@tanstack/react-router": "1.131.8",
    "analytics": "0.8.19",
    "axios": "1.11.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "graphql": "16.11.0",
    "graphql-ws": "6.0.6",
    "lucide-react": "0.539.0",
    "normalize.css": "8.0.1",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-hook-form": "7.62.0",
    "react-use": "17.6.0",
    "rxjs": "7.8.2",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "4.1.11",
    "tw-animate-css": "1.3.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.0",
    "@eslint/js": "9.33.0",
    "@html-eslint/eslint-plugin": "0.45.0",
    "@html-eslint/parser": "0.45.0",
    "@lhci/cli": "0.15.1",
    "@storybook/react-vite": "9.1.2",
    "@swc/cli": "0.7.8",
    "@swc/core": "1.13.3",
