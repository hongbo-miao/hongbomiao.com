# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{go.mod,*.go}]
indent_size = 4
indent_style = tab

[*.ino]
indent_size = 2
indent_style = space

[*.java]
indent_size = 2
indent_style = space

[*.json]
indent_size = 2
indent_style = space

[*.py]
indent_size = 4
indent_style = space

[*.rego]
indent_size = 4
indent_style = tab

[*.sh]
indent_size = 2
indent_style = space

[*.sol]
indent_size = 4
indent_style = space

[*.swift]
indent_size = 4
indent_style = space

[*.tf]
indent_size = 2
indent_style = space

[{*.yml,*.yaml}]
indent_size = 2
indent_style = space

[*.xml]
indent_size = 4
indent_style = space

[Dockerfie]
indent_size = 2
indent_style = space

[Makefile]
indent_size = 4
indent_style = tab
