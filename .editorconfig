# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{go.mod,*.go}]
indent_size = 4
indent_style = tab

[*.py]
indent_size = 4

[*.sol]
indent_size = 4

[Makefile]
indent_size = 4
indent_style = tab
