build:
    xcodebuild build-for-testing \
        -project mobile-ios.xcodeproj \
        -scheme mobile-ios \
        -destination "platform=iOS Simulator,name=iPhone 16 Pro Max,OS=18.6"

test:
    xcodebuild test-without-building \
        -project mobile-ios.xcodeproj \
        -scheme mobile-ios \
        -destination "platform=iOS Simulator,name=iPhone 16 Pro Max,OS=18.6"

build-test:
    xcodebuild test \
        -project mobile-ios.xcodeproj \
        -scheme mobile-ios \
        -destination "platform=iOS Simulator,name=iPhone 16 Pro Max,OS=18.6"

bundle-install:
    bundle install

bundle-add:
    bundle add xxx

bundle-update:
    bundle update

bundle-add-platform:
    bundle lock --add-platform x86_64-darwin-21

bundle-exec-test-coverage:
    bundle exec slather

tuist-install:
    tuist install

tuist-generate:
    tuist generate

tuist-generate-no-open:
    tuist generate --no-open
