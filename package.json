{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hongbomiao.com",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "scripts": {
    "commit": "commit",
    "lint:css": "stylelint '**/*.css'",
    "lint:css:fix": "stylelint --fix '**/*.css'",
    "lint:html": "eslint .",
    "lint:html:fix": "eslint . --fix",
    "lint:json": "eslint .",
    "lint:json:fix": "eslint . --fix",
    "lint:markdown": "markdownlint-cli2 '**/*.md'",
    "lint:markdown:fix": "markdownlint-cli2-fix '**/*.md'",
    "lint:natural-language": "textlint '**/*.{c,cjs,cpp,cs,csproj,cu,cuh,dbc,go,gradle,h,hpp,ino,ipynb,java,jl,js,json,kt,kts,m,md,mjs,p4,py,rego,rs,scad,scala,sh,sln,sol,sql,swift,tf,toml,ts,tsx,vhd,WizardFile,xml,yaml,yml}'",
    "lint:natural-language:fix": "textlint '**/*.{c,cjs,cpp,cs,csproj,cu,cuh,dbc,go,gradle,h,hpp,ino,ipynb,java,jl,js,json,kt,kts,m,md,mjs,p4,py,rego,rs,scad,scala,sh,sln,sol,sql,swift,tf,toml,ts,tsx,vhd,WizardFile,xml,yaml,yml}' --fix",
    "lint:solidity": "solhint '**/*.sol'",
    "lint:solidity:fix": "solhint --fix '**/*.sol'",
    "lint:xml": "prettier --check '**/*.xml'",
    "lint:xml:fix": "prettier --write '**/*.xml'"
  },
  "devDependencies": {
    "@eslint/json": "0.10.0",
    "@html-eslint/eslint-plugin": "0.33.0",
    "@html-eslint/parser": "0.33.0",
    "@prettier/plugin-xml": "3.4.1",
    "commitizen": "4.3.1",
    "eslint": "9.18.0",
    "markdownlint-cli2": "0.17.2",
    "prettier": "3.4.2",
    "prettier-plugin-solidity": "1.4.2",
    "solhint": "5.0.5",
    "stylelint": "16.13.2",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recess-order": "6.0.0",
    "stylelint-config-standard": "37.0.0",
    "stylelint-high-performance-animation": "1.10.0",
    "stylelint-prettier": "5.0.2",
    "textlint": "14.4.2",
    "textlint-rule-common-misspellings": "1.0.1"
  }
}
