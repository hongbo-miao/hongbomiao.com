{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "hongbomiao.com",
  "private": true,
  "engines": {
    "node": "22.x"
  },
  "type": "module",
  "scripts": {
    "commit": "commit",
    "lint-css": "stylelint '**/*.css'",
    "lint-css-fix": "stylelint --fix '**/*.css'",
    "lint-html": "eslint .",
    "lint-html-fix": "eslint . --fix",
    "lint-json-eslint": "eslint .",
    "lint-json-eslint-fix": "eslint . --fix",
    "lint-json-prettier": "prettier --check '**/*.json'",
    "lint-json-prettier-fix": "prettier --write '**/*.json'",
    "lint-markdown": "markdownlint-cli2 '**/*.md'",
    "lint-markdown-fix": "markdownlint-cli2 --fix '**/*.md'",
    "lint-natural-language": "textlint '**/*.{c,cjs,cpp,cs,csproj,cu,cuh,dbc,go,gradle,h,hpp,ino,ipynb,java,jl,js,json,kt,kts,m,md,mjs,p4,py,rego,rs,scad,scala,sh,sln,sol,sql,swift,tofu,toml,ts,tsx,vhd,WizardFile,xml,yaml,yml}'",
    "lint-natural-language-fix": "textlint '**/*.{c,cjs,cpp,cs,csproj,cu,cuh,dbc,go,gradle,h,hpp,ino,ipynb,java,jl,js,json,kt,kts,m,md,mjs,p4,py,rego,rs,scad,scala,sh,sln,sol,sql,swift,tofu,toml,ts,tsx,vhd,WizardFile,xml,yaml,yml}' --fix",
    "lint-solidity": "solhint '**/*.sol'",
    "lint-solidity-fix": "solhint --fix '**/*.sol'",
    "lint-xml": "prettier --check '**/*.xml' --plugin=@prettier/plugin-xml",
    "lint-xml-fix": "prettier --write '**/*.xml' --plugin=@prettier/plugin-xml"
  },
  "devDependencies": {
    "@eslint/json": "0.13.2",
    "@html-eslint/eslint-plugin": "0.47.0",
    "@html-eslint/parser": "0.47.0",
    "@prettier/plugin-xml": "3.4.2",
    "commitizen": "4.3.1",
    "eslint": "9.37.0",
    "markdownlint-cli2": "0.18.1",
    "prettier": "3.6.2",
    "solhint": "6.0.1",
    "stylelint": "16.25.0",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-recess-order": "7.3.0",
    "stylelint-config-standard": "39.0.1",
    "stylelint-high-performance-animation": "1.11.0",
    "stylelint-order": "7.0.0",
    "stylelint-prettier": "5.0.3",
    "textlint": "15.2.3",
    "textlint-rule-common-misspellings": "1.0.1"
  }
}
