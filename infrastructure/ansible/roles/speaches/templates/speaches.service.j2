[Unit]
Description=Speaches container service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
Environment=PATH=/usr/bin:/bin
ExecStartPre=docker volume create {{ speaches_volume_name }}
ExecStartPre=-docker rm --force {{ speaches_container_name }}
ExecStartPre=docker pull {{ speaches_docker_image }}
ExecStart=docker run \
  --name={{ speaches_container_name }} \
  --publish={{ speaches_port }}:8000 \
  --volume={{ speaches_volume_name }}:{{ speaches_volume_mount }} \
  --gpus {{ speaches_gpu_devices }} \
  --detach=false \
  --env=HF_TOKEN={{ hugging_face_token }} \
  {{ speaches_docker_image }}
ExecStop=docker stop {{ speaches_container_name }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
