sealed-secrets-seal:
    cat secrets/hm-ray-cluster-valkey-secret.unsealed.yaml | \
    kubeseal \
        --controller-namespace=production-hm-sealed-secrets \
        --controller-name=hm-sealed-secrets \
        --format=yaml \
        > kubernetes-manifests/hm-ray-cluster-valkey-secret.yaml

argo-cd-app-create:
    argocd app create production-hm-ray-cluster-valkey --file=manifests/hm-ray-cluster-valkey-application.yaml

argo-cd-app-update:
    argocd app create production-hm-ray-cluster-valkey --file=manifests/hm-ray-cluster-valkey-application.yaml --upsert

argo-cd-app-delete:
    argocd app delete production-hm-ray-cluster-valkey --yes
